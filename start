#!/bin/bash
set -e
source myversion

rm -rf autogenerated_files/

./build_run_docker.sh --rondb-version $RONDB_VERSION --size small --volumes-in-local-dir --num-mgm-nodes 1 --node-groups 1 --replication-factor 1 --num-mysql-nodes 1 --num-rest-api-nodes 0 --num-benchmarking-nodes 0  -d

sleep 3


echo "Put the following in your /etc/hosts"
echo "127.0.0.1     ndbd_1"
echo "127.0.0.1     mgmd_1"
echo "127.0.0.1     mysqld_1"


sys=$(uname -s)
if [ "$sys" != "Linux" ]; then
  echo "Put update libndbclient.dylib in ~/Library/Java/Extensions/libndbclient.dylib "
else
  rm -f libndbclient*
  docker cp mgmd_1:/srv/hops/mysql/lib/libndbclient.so.6.1.0 .
  ln -s libndbclient.so.6.1.0 libndbclient.so
fi

